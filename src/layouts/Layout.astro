---
import '@fontsource/space-grotesk'
import '@fontsource/young-serif'
import GlobalNavbar from '@/components/navbar'
interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en" class="flex justify-center bg-myTheme-background">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Welcome to Joe Linogao's portfolio page. Learn more about their experiences and projects, then follow up on his socials!"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<GlobalNavbar />

	<body class="min-h-screen">
		<slot />
	</body>

	<style is:global></style>
</html>
